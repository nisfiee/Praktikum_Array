#include<iostream>
using namespace std;

void main()
{
	int i, arr[5], bil, cari, toggle=0;
	
	for (i=0;i<5;i++)
	{
		cout<< "Bilangan ke-" <<i+1 << " = ";
		cin>>bil;
		cout<< endl;
	}
	
	cout<< " Nilai yang ingin dicari = ";
	cin>> cari;
	cout<< endl;
	
	for (i=0; i<5; i++)
	{
		if(cari==arr[i])
		{
			cout<< "Nilai" <<cari << " ditemukan di array ke- " <<i+1 <<endl;
			toggle=1;
		}
		if(toggle==0)
		{
			cout<< "ga ketemu";
			cout<<endl;
		}
	}
}
